function  convergence_proof( func, x, xopt ,fignumber )
%convergence proof plots the infinite norm of the gradient of f func
%and the deviation of the estimation x from the global minimum xopt
 
iter=(1:length(x))';
figure(fignumber)
subplot(2,1,1)
plot(iter,sqrt(sum((x-xopt).^2,)
xlabel('Iterations')
ylabel('||df_k||_inf')
subplot(2,1,2)
plot(iter,x-xopt)
xlabel('Iterations')
ylabel('e_k')
end

